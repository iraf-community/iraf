# Library for the GEOMETRIC TRANSFORMATION tasks

$checkout libpkg.a pkg$images/
$update   libpkg.a
$checkin  libpkg.a pkg$images/
$exit

tfiles:
	$ifolder (blkav.x, blkav.gx)
	    $generic -k blkav.gx -o blkav.x		$endif
	$ifolder (blkrp.x, blkrp.gx)
	    $generic -k blkrp.gx -o blkrp.x		$endif
	$ifolder (imtrans.x, imtrans.gx)
	    $generic -k imtrans.gx -o imtrans.x		$endif
	;

libpkg.a:
	$ifeq (USE_GENERIC, yes) $call tfiles $endif

	t_blkavg.x	<imhdr.h>
	t_blkrep.x	<imhdr.h>
	t_geomap.x	geomap.h <fset.h> <error.h> <mach.h> <math/gsurfit.h>\
			<pkg/dttext.h>
	t_geotran.x	geotran.h <imhdr.h> <imset.h> <math.h> \
			<math/gsurfit.h> <mwset.h>
	t_imshift.x	<error.h> <imhdr.h> <imset.h> <math/iminterp.h>
	t_imtrans.x	<imhdr.h> <error.h>
	t_magnify.x	<imhdr.h> <imset.h> <math/iminterp.h>
	t_shiftlines.x	<error.h>
	blkav.x		<imhdr.h> <error.h>
	blkcomp.x	<imhdr.h>
	blkrp.x		<imhdr.h>
	geofit.x	geomap.h <mach.h> <math/gsurfit.h>
	geogmap.x	geomap.h geogmap.h <error.h>
	geograph.x	geomap.h geogmap.h <gset.h> <math.h> <mach.h> \
			<pkg/gtools.h> <math/gsurfit.h>
	geotran.x	geotran.h <imhdr.h> <imset.h> <math/gsurfit.h> \
			<mach.h> <math/iminterp.h>
	geotimtran.x	geotran.h <imhdr.h> <imset.h> <math/gsurfit.h> \
			<mach.h> <math/iminterp.h>
	imtrans.x
	shiftlines.x	<imhdr.h> <imset.h>
	@xregister
	;
