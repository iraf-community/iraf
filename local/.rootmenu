"Editors"               MENU
        "Text Editor"		textedit
        "Defaults Editor"	defaultsedit
        "Icon Editor"		iconedit
        "Font Editor"		fontedit
"Editors"               END
"Shells"		MENU
	"Gterm"			gterm -Wh 40 -I "source ~/.login"
	"IRAF"			gterm -Wh 40 -Wf 0 0 255 -I cl -G -Wb 128 0 0 -Wf 0 255 255 -I "source ~/.login"
	"Shell Tool"		shelltool
	"Command Tool"		cmdtool
	"Graphics Tool"         gfxtool
	"Console"               cmdtool -C
"Shells"		END
"Tools"            	MENU
	VT100-tools	MENU
	"VT100 emulator"        vttool
	"VT100 Tool"		shelltool -Ww 80 -Wh 24 -Wl " VT100 Tool" vtem
	"VT100 (EDT)"           vttool -b edt.buttons
	"Shelltool (novices)"   vttool -b shell.buttons /bin/csh
	VT100-tools	END
	"ImTool"		imtool
	"Movie" cmdtool -Wn -Ww 80 -Wh 1 csh -c "echo -n 'Movie directory? '; (cd $<; overview movie)"

	"MoonTool"		/usr/local/bin/moontool
	"Touchup"		/usr/local/bin/touchup
	"Mail Tool"             mailtool
        "Dbx (debug) Tool"   dbxtool
	"Net Traffic"	traffic
        "Performance Meter"	MENU
                "Percent CPU Used"			perfmeter -v cpu
		"Load Average"				perfmeter -v load
                "Disk Transfers"                        perfmeter -v disk
		"Paging Activity"			perfmeter -v page
                "Swapped Jobs"                          perfmeter -v swap
		"Device Interrupts"			perfmeter -v intr
		"Context Switches"			perfmeter -v cntxt
                "Ethernet Packets"                      perfmeter -v pkts
		"Ethernet Collisions"			perfmeter -v colls
		"Ethernet Errors"			perfmeter -v errs
        "Performance Meter"	END
"Tools"			END
"Exit SunView"          EXIT
